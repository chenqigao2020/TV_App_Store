<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="@dimen/icon_size_plus"
        android:layout_height="@dimen/icon_size_plus"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameTextView"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_default"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingTop="@dimen/flag_padding_tb"
            android:paddingBottom="@dimen/flag_padding_tb"
            android:paddingRight="@dimen/flag_padding_lr"
            android:paddingLeft="@dimen/flag_padding_lr"
            android:background="@drawable/my_user_flag_bg"
            android:layout_marginTop="@dimen/margin"
            android:text="普通会员"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>